@using Uranus.Domain.ViewModels;
@model Uranus.Domain.Entities.ContactUs
@{
    ViewBag.Title = "Contact";
}
<div class="container">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Contact <small>We'd Love to Hear From You!</small></h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">Contact</li>
            </ol>
        </div>

    </div><!-- /.row -->
    <div class="row">
        <div class="col-sm-8">
            <h3>Let's Get In Touch!</h3>
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">×</a>
                    <h4>Validation Errors</h4>
                    @Html.ValidationSummary()
                </div>
            }
            @{
                var message = TempData["Message"] as string;
                if (message != null)
                {
                    <div class="alert-success">
                        @message
                    </div>
                }
            }

            @using (Html.BeginForm())
            {
                <div class="row">
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.EmailId)
                        @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.PhoneNo)
                        @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control" })
                    </div>
                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Address)
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                    </div>

                    <div class="form-group col-lg-8">
                        @Html.LabelFor(model => model.Message)
                        @Html.TextAreaFor(model => model.Message, new { @class = "form-control" })

                    </div>
                    <div class="form-group col-lg-12">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>

                </div>
            }
        </div>
        <div class="col-sm-4">
            <h3></h3>
            <h4>@GlobalSetup.Company.CompanyName </h4>
            <p>
               @GlobalSetup.Company.Address<br>
                <br>
            </p>
            <p><i class="fa fa-phone"></i> <abbr title="Phone">P</abbr>: @GlobalSetup.Company.ContactNo</p>
            <p><i class="fa fa-envelope-o"></i> <abbr title="Email">E</abbr>: <a href="mailto:">@GlobalSetup.Company.WebsiteLink</a></p>
            <p><i class="fa fa-clock-o"></i> <abbr title="Hours">H</abbr>: @GlobalSetup.Company.BusinessHours</p>
            <ul class="list-unstyled list-inline list-social-icons">
                <li class="tooltip-social facebook-link"><a title="Facebook" data-placement="top" data-toggle="tooltip" href= @GlobalSetup.Company.FacebookLink><i class="fa fa-facebook-square fa-2x">@GlobalSetup.Company.FacebookLink</i></a></li>
                <li class="tooltip-social linkedin-link"><a title="LinkedIn" data-placement="top" data-toggle="tooltip" href=@GlobalSetup.Company.LinkedInLink><i class="fa fa-linkedin-square fa-2x">@GlobalSetup.Company.LinkedInLink</i></a></li>
                <li class="tooltip-social twitter-link"><a title="Twitter" data-placement="top" data-toggle="tooltip" href=@GlobalSetup.Company.TwitterLink><i class="fa fa-twitter-square fa-2x">@GlobalSetup.Company.TwitterLink</i></a></li>
            </ul>
        </div>
    </div><!-- /.row -->

</div>