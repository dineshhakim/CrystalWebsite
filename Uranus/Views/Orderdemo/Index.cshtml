@using Uranus.Utility
@model Uranus.Domain.Entities.OrderDemo

@{
    ViewBag.Title = "Order Demo";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewBag.Title</h1>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="active">OrderDemo</li>
            </ol>
        </div>

    </div><!-- /.row -->
    <div class="row">
        <div class="col-sm-8">
            <h3>Get Free Demo For 30 Days</h3>
            @Html.AntiForgeryToken()
            @if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
            {
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert">×</a>
                    <h4>Validation Errors</h4>
                    @Html.ValidationSummary()
                </div>
            }
            @{
                var message = TempData["Message"] as string;
                if (message != null)
                {
                    <div class="alert alert-success">
                        @message
                    </div>
                }
            }
            @using (Html.BeginForm("Index", "Orderdemo", FormMethod.Post))
            {


                <div class="row">


                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name)


                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.Designation)
                        @Html.TextBoxFor(model => model.Designation)


                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.OrganizationName)
                        @Html.TextBoxFor(model => model.OrganizationName)


                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.OrganizationType)
                        @Html.DropDownListFor(model => model.OrganizationType, DropDownHelper.FillddlOrganizationType())

                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.NoOfBranch)
                        @Html.TextBoxFor(model => model.NoOfBranch)


                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.ContactNo)
                        @Html.TextBoxFor(model => model.ContactNo)


                    </div>

                    <div class="form-group col-lg-4">
                        @Html.LabelFor(model => model.EmailId)
                        @Html.TextBoxFor(model => model.EmailId)

                    </div>

                    <div class="form-group col-lg-8">
                        @Html.LabelFor(model => model.Address)
                        @Html.TextAreaFor(model => model.Address)

                    </div>

                    <div class="form-group col-lg-8">
                        @Html.LabelFor(model => model.Comments)
                        @Html.TextAreaFor(model => model.Comments)


                    </div>

                    <div class="clearfix"></div>
                    <div class="form-group col-lg-4"></div>
                    <div class="form-group col-lg-4">
                        <button class="btn btn-primary" type="submit">Submit</button>

                    </div>
                </div>
            }


        </div>

        

    </div>
</div>

